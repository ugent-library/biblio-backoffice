package publication

import (
	"github.com/ugent-library/biblio-backoffice/ctx"
	"github.com/ugent-library/biblio-backoffice/models"
)

templ RefreshDatasets(c *ctx.Ctx, publication *models.Publication, relatedDatasets []*models.Dataset) {
	<div hx-swap-oob="innerHTML:#modals"></div>
	<div hx-swap-oob="innerHTML:#datasets-body">
		@datasetsBody(c, publication, relatedDatasets)
	</div>
}
