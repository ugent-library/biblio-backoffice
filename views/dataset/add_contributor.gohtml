{{define "modal_dialog"}}
<div class="modal-dialog modal-dialog-centered modal-xl modal-dialog-scrollable" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title">Add {{.Locale.TS "dataset.contributor.role" .Role}}</h2>
        </div>

        <div class="p-6 border-bottom">
            <h3>Search {{.Locale.TS "dataset.contributor.role" .Role}}</h3>
        
            <div class="person-attributes">
                {{range .Form.Sections}}
                <div class="form-row align-items-end">
                    {{.Render}}
                </div>
                {{end}}
            </div>
        </div>
        
        <div class="modal-body" id="person-suggestions">
            {{partial "dataset/add_contributor_suggest" .}}
        </div>

        <div class="modal-footer">
            <button class="btn btn-link modal-close" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</div>
{{end}}