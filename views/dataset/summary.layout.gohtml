<div class="list-group-item-main u-min-w-0">
    <div class="c-thumbnail-and-text align-items-start d-block d-lg-flex">
            <a href="{{.PublicationURL}}">
                {{partial "dataset/thumbnail" .Publication}}
            </a>
        <div class="c-thumbnail-text u-min-w-0">
            <div class="bc-toolbar bc-toolbar--auto">
                <div class="bc-toolbar-left flex-wrap">
                    <span class="c-subline text-nowrap pr-3 my-2">
                        {{partial "shared/status" .Dataset}}
                    </span>
                    {{if .Dataset.Locked}}
                    <span class="c-subline text-nowrap mr-3 pr-3 my-2 border-right" data-toggle="tooltip" data-placement="bottom" data-original-title="Locked for editing">
                        <i class="if if-lock if--small if--muted"></i>
                        <span class="text-muted c-body-small ml-2">Locked</span>
                    </span>
                    {{end}}
                    <div class="c-subline text-nowrap mr-3 pr-3 my-2{{if eq .Dataset.AccessLevel "info:eu-repo/semantics/embargoedAccess"}} border-right{{end}}">
                        {{if eq .Dataset.AccessLevel "info:eu-repo/semantics/openAccess"}}
                        <i class="if if-calendar if--small if--muted"></i>
                        <span class="c-subline text-truncate pl-2">{{.Locale.TS "dataset_access_levels" .Dataset.AccessLevel}}</span>
                        {{else if eq .Dataset.AccessLevel "info:eu-repo/semantics/embargoedAccess"}}
                        <i class="if if-time if--small if--muted"></i>
                        <span class="c-subline text-muted pl-2">{{.Locale.TS "dataset_access_levels" .Dataset.AccessLevel}}</span>
                        {{else if eq .Dataset.AccessLevel "info:eu-repo/semantics/restrictedAccess"}}
                        <i class="if if-ghent-university if--small if--muted"></i>
                        <span class="c-subline text-muted pl-2">{{.Locale.TS "dataset_access_levels" .Dataset.AccessLevel}}</span>
                        {{else if eq .Dataset.AccessLevel "info:eu-repo/semantics/closedAccess"}}
                        <i class="if if-eye-off if--small if--muted"></i>
                        <span class="c-subline text-muted pl-2">{{.Locale.TS "dataset_access_levels" .Dataset.AccessLevel}}</span>
                        {{else}}
                        <i class="if if-error-circle if--error"></i>
                        <span class="pl-2 text-muted">Access level missing</span>
                        {{end}}
                    </div>
                    {{if eq .Dataset.AccessLevel "info:eu-repo/semantics/embargoedAccess"}}
                    <div class="c-subline text-nowrap mr-3 pr-3 my-2">
                        {{if eq .Dataset.AccessLevelAfterEmbargo "info:eu-repo/semantics/openAccess"}}
                        <i class="if if-calendar if--small if--muted"></I>
                        {{else}}
                        <i class="if if-ghent-university if--small if--muted"></I>
                        {{end}}
                        <span class="c-subline text-truncate pl-2">{{.Locale.TS "dataset_access_levels_after_embargo" .Dataset.AccessLevelAfterEmbargo}} from {{.Dataset.EmbargoDate | date "02-01-2006"}}</span>
                    </div>
                    {{end}}
                </div>
                <div class="bc-toolbar-right">
                    {{block "summary_actions" .}}{{end}}
                </div>
            </div>
            <h4 class="list-group-item-title">
                {{if .User.CanCurate}}
                {{if .Dataset.Title}}
                    {{.Dataset.Title}}
                {{else}}
                    Untitled record
                {{end}}
                {{else}}
                <a href="{{.DatasetURL}}">
                {{if .Dataset.Title}}
                    {{.Dataset.Title}}
                {{else}}
                    Untitled record
                {{end}}
                </a>
                {{end}}
            </h4>
            <div class="c-meta-list c-meta-list-horizontal">
                {{if .Dataset.Year}}<span class="c-meta-item">{{.Dataset.Year}}</span>{{end}}
                {{if .Dataset.Publisher}}<span class="c-meta-item">{{.Dataset.Publisher}}</span>{{end}}
                {{if .Dataset.ResolveDOI}}
                <span class="c-meta-item">
                    <span class="c-body-small text-muted">
                        <a class="c-link c-link-muted" target="_blank" href="{{.Dataset.ResolveDOI}}">
                            <span class="text-decoration-underline"> View in external repository</span>
                            <i class="if if--small if-external-link"></i>
                        </a>
                    </span>
                </span>
                {{end}}
            </div>

            {{with .Dataset.Author}}{{partial "shared/contributors" (dict "Contributors" . "ContributorsURL" ($.DatasetURL | querySet "show" "contributors"))}}{{end}}

            <div class="bc-toolbar bc-toolbar-responsive">
                <div class="bc-toolbar-left flex-wrap">
                    <div class="text-muted c-body-small text-truncate my-3">Biblio ID:
                        <code class="c-code ml-3">{{.Dataset.ID}}</code>
                    </div>
                </div>
                <div class="bc-toolbar-right flex-wrap">
                    <div class="bc-toolbar-item">
                        <span class="c-body-small text-muted text-truncate my-2">Updated {{timeElapsed .Dataset.DateUpdated "en"}}{{with .Dataset.User}} by {{.Name}}{{end}}</span>
                    </div>
                    <div class="bc-toolbar-item">
                        <ul class="c-meta-list c-meta-list-horizontal flex-nowrap">
                            {{if .Dataset.RelatedPublication}}
                            <li class="c-meta-item" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="{{len .Dataset.RelatedPublication}} related publications">
                                <i class="if if-article if--muted if--small mr-2"></i>
                                <span class="text-muted c-body-small">{{len .Dataset.RelatedPublication}}</span>
                            </li>
                            {{end}}
                            {{/* <li class="c-meta-item" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Sent to Orcid">
                                <i class="if if-orcid if--muted if--small"></i>
                                <i class="if if-check text-success if--small"></i>
                            </li> */}}
                        </ul>
                    </div>
                </div>
            </div>
            {{block "summary_footer" .}}{{end}}
        </div>
    </div>
</div>